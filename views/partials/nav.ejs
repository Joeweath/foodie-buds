<script src="https://kit.fontawesome.com/7ba2214bf9.js" crossorigin="anonymous"></script>
<% if (!user) { %>
  <link rel="stylesheet" href="/stylesheets/siwg.css">
  <% } %>
    </head>

    <body>
      <nav>
        <div class="nav-buttons">
          <!-- Home page -->
          <!-- 2x size homepage icon -->
          <a href="/foodies/" class="twox">
            <i class="bi bi-house-door fa-2x" ></i></a>
          <!-- 1x size homepage icon -->
          <a href="/foodies/" class="onex">
            <i class="bi bi-house-door fa-lg" ></i></a> 
          <!-- Add a meal Page  -->
          <!-- 2x size add meal icon -->

          <a href="/foodies/new" class="twox">
            <i class="bi bi-plus-square fa-2x"></i></a>
          <!-- 1x size add meal icon -->

          <a href="/foodies/new" class="onex">
            <i class="bi bi-plus-square fa-lg" ></i></a>
          <!-- All profiles page -->
          <!-- 2x size profiles icon -->

          <a href="/profiles" class="twox">
            <i class="bi bi-people fa-2x" ></i></a>
          <!-- 1x size profiles icon -->

          <a href="/profiles" class="onex">
            <i class="bi bi-people fa-lg" ></i></a>
        </div>

        <h1 class="nav-h1">Foodie Buds</h1>
        <div class="right-nav">

          <h4 class="hey-message">Hey, <%= user ? user.profile.name : "Foodie Bud!" %>
          </h4>
          <% if (user?.profile.avatar) { %>
            <div>
              <a href="/profiles/<%= user?.profile._id %>">
                <img src="<%= user.profile.avatar %>" alt="<%= user.profile.name %> avatar" width="40" height="40" class="main-avatar"/>
              </a>
            </div>
            <% } %>
              <% if (!user) { %>
                  <a href="/auth/google" class="siwg-link">
                    <button type="submit" class="siwg">
                      <img id="siwg-image" alt="Sign in with Google" />
                    </button>
                  </a>
                  <% } %>
        </div>

      </nav>
