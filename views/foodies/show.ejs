<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Something is smelling GOOD!!</h1>
  <img src="<%= foodie.meal %>" alt="">
  <h5><%= foodie.description %></h5>
  <ul>
    <li>
      Directions: <%= foodie.direction%>
    </li>
  </ul>
  <% if (foodie.owner.equals(user?.profile._id)) { %>
    <form action="/foodies/<%= foodie._id %>/edit" method="GET">
      <button class="btn" type="submit">Edit your meal üöß</button>
    </form>
  <% } %>
</section>
<% if (foodie.owner.equals(user?.profile._id)) { %>
<form action="/foodies/<%= foodie._id %>?_method=DELETE" method="POST">
  <button class="btn" type="submit">Delete this Meal</button>
</form>
<% } %>
<form 
    id="add-review-form"
    action="/foodies/<%= foodie._id %>/reviews"
    method="POST"
  >
    <label for="comment-textarea">Comment:</label>
    <textarea name="comment" id="comment-textarea"></textarea>
    <label for="rating-select">Rating:</label>
    <select name="rating" id="rating-select">
      <option value="1">‚≠ê</option>
      <option value="2">
        ‚≠ê‚≠ê
      </option>
      <option value="3">
        ‚≠ê‚≠ê‚≠ê
      </option>
      <option value="4">
        ‚≠ê‚≠ê‚≠ê‚≠ê
      </option>
      <option value="5" selected>
        ‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê
      </option>
    </select>
    <button type="submit">POST</button>
  </form>
  <% if (foodie.feedback.length) { %>
    <table>
      <thead>
      </thead>
      <tbody>
        <% foodie.feedback.forEach(function(review) { %>
          <tr>
            <td><%= review.createdAt.toLocaleDateString() %></td>
            <td><%= review.comment %> - <%= review.rating %> </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Comments Yet</h3>
  <% } %>
<%- include('../partials/footer') %>